extends baseEmail

block content
    img(src="cid:logo" alt="File Logo" width="120")
    p Hello #{firstName},
    p Your Company Registration request was received.
    p Please find attached your business documents for review.
    p If any information is incorrect, please contact File support for corrections.

    ul
        for url in fileUrls
            li= url
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
    p Thanks for using File!
    p - Regards,
    p - File Team
